@{
    ViewData["Title"] = "Editing";
}
<div class="text-center">
    <h2 class="display-4">Создание склада</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Название склада:</div>
        <div class="col-8"><input type="text" name="storageName" id="storageName" value="@ViewBag.StorageName" /></div>
    </div>
    <div class="row">
        <div class="col-4">ФИО ответственного:</div>
        <div class="col-8"><input type="text" name="StorageManager" id="StorageManager" value="@ViewBag.StorageManager" /></div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Ингредиент
                </th>
                <th>
                    Количество
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.StorageIngredients)
            {
                <tr>
                    <td>
                        @item.Value.Item1
                    </td>
                    <td>
                        @item.Value.Item2
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Изменить" class="btn btnprimary" /></div>
    </div>
</form>